<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WatterCount" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:ambientShadowAlpha">0.01</item>
        <item name="android:spotShadowAlpha">0.08</item>
    </style>

    <style name="Theme.WatterCount" parent="Base.Theme.WatterCount" />

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/navigationBackgroundGray</item>
        <item name="android:stateListAnimator">@null</item> <!-- Отключение аниматора -->
        <item name="android:theme">@style/BottomNavigationTheme</item>
    </style>

    <style name="BottomNavigationTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/buttonBackgroundInactive</item>
        <item name="colorOnPrimary">@color/primary</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!-- остальные нужные атрибуты -->
    </style>

</resources>