<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/history_background"
    android:gravity="center_vertical"
    android:paddingBottom="8dp"
    android:paddingHorizontal="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/history_drink_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/textGray"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/history_drink_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/history_drink_count_dimens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ml"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/history_drink_edit"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/buttonBackgroundInactive"
            android:contentDescription="Редактировать объем"
            android:padding="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_change"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
</LinearLayout>